{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "react-dom",
      "dayjs"
    ]
  },
  "exclude": [
    "node_modules",
    "_site"
  ]
}